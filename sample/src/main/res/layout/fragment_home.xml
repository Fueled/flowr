<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/home_open_view_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_view_fragment"/>

        <Button
            android:id="@+id/home_open_link_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/open_link_fragment"/>

        <Button
            android:id="@+id/home_open_first_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/open_first_fragment"/>

    </LinearLayout>

</layout>